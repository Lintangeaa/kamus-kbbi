<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin">Kamus KBBI Admin</a>
            <form action="/admin/logout" method="POST" class="mb-0">
                <button class="btn btn-outline-light btn-sm" type="submit">Logout</button>
            </form>
        </div>
    </nav>

    <div class="container-fluid p-0">
        <div class="row g-0">
            <aside class="col-12 col-md-3 col-lg-2 bg-light border-end" style="min-height: calc(100vh - 56px);">
                <div class="list-group list-group-flush">
                    <a href="/admin" class="list-group-item list-group-item-action border-0 <%= currentPath === '/admin' ? 'active' : '' %>">
                        <i class="fas fa-gauge me-2"></i> Dashboard
                    </a>
                    <a href="/admin/ads" class="list-group-item list-group-item-action border-0 <%= currentPath.startsWith('/admin/ads') ? 'active' : '' %>">
                        <i class="fas fa-bullhorn me-2"></i> Iklan
                    </a>
                    <a href="/admin/seo" class="list-group-item list-group-item-action border-0 <%= currentPath.startsWith('/admin/seo') ? 'active' : '' %>">
                        <i class="fas fa-search me-2"></i> SEO
                    </a>
                </div>
            </aside>
            <main class="col-12 col-md-9 col-lg-10 p-4" style="min-height: calc(100vh - 56px);">
                <%- body %>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


